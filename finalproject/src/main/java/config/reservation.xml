<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="reservation">
	
	<insert id="save" parameterType="dto.ReservationDTO">
	    insert into reservation
	    values(res_seq.nextval, #{res_date}, #{hospital_hosnum,jdbcType=INTEGER}, #{member_id,jdbcType=VARCHAR})
	</insert>
	
	<select id="r_list" resultType="dto.ReservationDTO">
		select * 
        from reservation
        order by res_num desc
        
	</select>
	
 	<select id="search" parameterType="String" resultType="dto.ReservationDTO">
		select res_num, res_date, hospital_hosnum, member_id
		from reservation
		where member_id=#{member_id}
	</select> 
	
	<delete id="r_delete" parameterType="int">
		delete 
		from reservation
		where res_num = #{res_num}
	</delete>
	

</mapper>


















 
 
 
 
 
 
